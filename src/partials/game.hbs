<link rel='stylesheet' href='./src/css/game.css' />
<link rel='stylesheet' href='./src/css/countdown.css' />

<div class='ui game' id='game-dom'>
    <div class='tachometer'>
        <img src='/assets/img/tachometer.png' alt='' />
        <img id='arrow-dom' class='arrow' src='/assets/img/arrow.png' alt='' />
        <div class='speed'>
            <div id='speed-number-dom'>10</div><div class='kmh'>kmh</div>
        </div>
        <div class='gear'>
            <div id='gear-number-dom'>1</div>
        </div>
        <div class='backdrop'></div>
    </div>
    <div class='info'>
        <div class='timer'>
            <div id='timer-number-dom'>01:00:00</div>
        </div>
        <div class='laps'>
            <div>КРУГОВ ПРОЙДЕНО:</div>
            <div id='laps-number-dom'>0</div>
        </div>
        <div class='backdrop'></div>
    </div>
</div>

<div class='ui countdown' id='countdown-dom'>
    <div class='traffic-light'>
        <div id='countdown-number-dom' class='circle red active'>3</div>
        <div id='countdown-go-dom' class='circle green'></div>
        <div class='backdrop'></div>
    </div>
</div>